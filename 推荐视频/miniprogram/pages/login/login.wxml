<view class="container">
  <view class="section">
    <text>账号</text><input 
    bindinput="inputAccount" 
    value="{{account}}"></input>
  </view>
  <view class="section">
    <text>密码</text><input type="password" 
    bindinput="inputPwd" 
    value="{{pwd}}"></input>
  </view>
  <view class="btn-content" hidden="{{isLogin}}">
    <button bindtap="Login">登录</button>
    <view>
      <text bindtap="switchBtn">
        注册
      </text>
    </view>
  </view>
  <view class="btn-content" hidden="{{!isLogin}}">
    <button bindtap="Regist">注册</button>
    <view>
      <text bindtap="switchBtn">
        登录
      </text>
    </view>
  </view>
</view>