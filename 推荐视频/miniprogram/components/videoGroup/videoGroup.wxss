  font-style: normal;
}

.video-item{
  width:100%;
  margin-top: 30rpx;
  border-radius: 0 0 10rpx 10 rpx;
  overflow: hidden;
}
.video-image{
  width:100%;
  height:225px;
  position: relative;
}
.video-image image{
  width:100%;
  height:100%;
}
.video-title{
  position: absolute;
  width:100%;
  height:70rpx;
  background:linear-gradient(#000,transparent);
  top:0;
  left:10rpx;
  color:#fff;
}
.icon-zhuanfa{
  vertical-align: center;
  margin:auto 20rpx;
  color:#fff;
}
.icon-zhuanfa:before {
  content: "\e627";
}
.icon-bofang:before {
  content: "\e606";
}
.icon-bofang{
  position: absolute;
  font-size:80rpx;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  color:#fff;
}
.video-item .video{
  width:100%;
}
.video-footer{
  display: flex;
  justify-content: space-between;
}
.video-count{
  color:#fff;
}